# Google Gemini API Key (required for voice AI)
GOOGLE_GENAI_API_KEY=your_gemini_api_key_here

# OpenAI Realtime API Key (required for OpenAI low-latency voice)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: override OpenAI realtime model/voice
# OPENAI_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17
# OPENAI_VOICE=fable

# Optional: Gmail credentials (for email/calendar features)
# GMAIL_CREDENTIALS_JSON={"installed":{"client_id":"...","client_secret":"..."}}
# GMAIL_TOKEN_JSON={"access_token":"...","refresh_token":"..."}

# Optional: OAuth redirect URI (for production deployments)
# OAUTH_REDIRECT_URI=https://your-domain.com/api/gmail/auth-redirect
