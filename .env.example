# Voice Provider API Keys (at least one required)
# Google Gemini API Key (for Gemini voice provider)
GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here

# OpenAI API Key (for OpenAI Realtime voice provider AND optional OpenAI features)
OPENAI_API_KEY=your_openai_api_key_here

# OpenWeather API Key (Optional - for weather features)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# CoinMarketCap API Key (Optional - for crypto price features)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gmail Credentials (Optional - can be loaded from backend/gmail-credentials.json)
# GMAIL_CREDENTIALS_JSON={"web":{"client_id":"...","client_secret":"..."}}
# GMAIL_TOKEN_JSON={"type":"authorized_user","client_id":"..."}

# Server Port (auto-set by Railway/Vercel)
# PORT=3000

# Node Environment
NODE_ENV=production
